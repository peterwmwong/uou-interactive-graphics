{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "open-xcode",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "command": "open ${workspaceFolder}/xcode-project/xcode-project.xcodeproj",
            "problemMatcher": []
        },
        {
            "label": "diff-shader-asm",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "touch /tmp/uou-shader-BEFORE.ll && /usr/local/bin/code-insiders --diff /tmp/uou-shader-BEFORE.ll /tmp/uou-shader.ll",
            "problemMatcher": []
        },
        {
            "label": "compile-and-emit-shader-asm",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "command": "xcrun -sdk macosx metal -std=macos-metal2.4 -S -emit-llvm -o /tmp/uou-shader-tmp.ll ${fileDirname}/shaders.metal && mv /tmp/uou-shader-tmp.ll /tmp/uou-shader.ll"
        },
        {
            "label": "build-release-asm",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "command": "RUSTFLAGS=\"--emit asm -C target-cpu=native\" cargo build --release -p void-renderer --bin void-renderer && cat target/release/deps/void_renderer-*.s > /tmp/void-renderer-AFTER.s",
            "problemMatcher": []
        },
        {
            "label": "diff-release-asm",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "touch /tmp/void-renderer-BEFORE.s && touch /tmp/void-renderer-AFTER.s && /usr/local/bin/code-insiders --diff /tmp/void-renderer-BEFORE.s /tmp/void-renderer-AFTER.s",
            "problemMatcher": []
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "--bin",
                "proj-1-hello-world"
            ],
            "label": "Run proj-1-hello-world"
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "--bin",
                "proj-2-transformations"
            ],
            "label": "Run proj-2-transformations"
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "--bin",
                "proj-3-shading"
            ],
            "label": "Run proj-3-shading"
        }
    ]
}