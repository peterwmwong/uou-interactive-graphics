            "problemMatcher": []
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "--bin",
                "png-add-alpha",
                "--",
                "/Users/pwong/projects/uou-interactive-graphics/png-add-alpha/test.png"
            ],
            "label": "Run png-add-alpha"
        },
        {
            "label": "diff-shader-asm",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "touch /tmp/uou-shader-BEFORE.ll && /usr/local/bin/code-insiders --diff /tmp/uou-shader-BEFORE.ll /tmp/uou-shader.ll",
            "problemMatcher": []
        },
        {
            "label": "compile-and-emit-shader-asm",
